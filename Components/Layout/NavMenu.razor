@using Microsoft.AspNetCore.Components.Authorization

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">🚕 Bellwood Elite Admin</a>
        <AuthorizeView>
            <Authorized>
                <span class="text-white me-3">@context.User.Identity?.Name</span>
                <a href="/logout" class="btn btn-sm btn-outline-light">Logout</a>
            </Authorized>
        </AuthorizeView>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="main" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="bookings">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Bookings
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="quotes">
                <span class="bi bi-currency-dollar" aria-hidden="true"></span> Quotes
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="affiliates">
                <span class="bi bi-people-fill" aria-hidden="true"></span> Affiliates
            </NavLink>
        </div>
    </nav>
</div>