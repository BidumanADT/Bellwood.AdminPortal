@page "/access-denied"
@layout Bellwood.AdminPortal.Components.Layout.EmptyLayout

<PageTitle>Access Denied - Bellwood Admin Portal</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    <div class="text-danger mb-4">
                        <span class="bi bi-shield-fill-exclamation" style="font-size: 4rem;"></span>
                    </div>

                    <h2 class="card-title mb-3">Access Denied</h2>
                    
                    <p class="text-muted mb-4">
                        You do not have permission to access this resource.
                    </p>

                    <div class="alert alert-warning" role="alert">
                        <span class="bi bi-info-circle-fill me-2"></span>
                        <strong>This feature requires admin privileges.</strong>
                        <br />
                        If you believe you should have access, please contact your system administrator.
                    </div>

                    <div class="mt-4">
                        <a href="/main" class="btn btn-primary">
                            <span class="bi bi-house-door me-2"></span>
                            Go to Home
                        </a>
                        <a href="/logout" class="btn btn-outline-secondary ms-2">
                            <span class="bi bi-box-arrow-right me-2"></span>
                            Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
