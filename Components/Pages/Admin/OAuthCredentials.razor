@page "/admin/credentials"
@rendermode InteractiveServer
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "admin")]
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation

<PageTitle>OAuth Credentials - Bellwood Elite</PageTitle>

<AuthorizeView Roles="admin">
    <Authorized>
        <div class="container-fluid py-4">
            <div class="row mb-4">
                <div class="col">
                    <h2 class="text-bellwood-gold">?? OAuth Credential Management</h2>
                    <p class="text-muted">Manage third-party integration credentials</p>
                </div>
            </div>

            <!-- Coming Soon Notice -->
            <div class="alert alert-info">
                <h4 class="alert-heading">?? Feature Coming Soon</h4>
                <p>
                    OAuth credential management for LimoAnywhere integration will be available in a future release.
                </p>
                <hr />
                <p class="mb-0">
                    <strong>Planned Features:</strong>
                </p>
                <ul class="mb-0">
                    <li>View current OAuth client credentials</li>
                    <li>Update client ID and client secret</li>
                    <li>Secret masking and reveal with confirmation</li>
                    <li>Test connection to LimoAnywhere API</li>
                    <li>Audit logging for credential access</li>
                </ul>
            </div>

            <!-- Placeholder UI Preview -->
            <div class="card" style="opacity: 0.6;">
                <div class="card-body">
                    <h5 class="card-title">LimoAnywhere Integration</h5>
                    
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <label class="form-label">Client ID:</label>
                            <input type="text" class="form-control" value="abc123def456" disabled />
                        </div>
                    </div>
                    
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <label class="form-label">Client Secret:</label>
                            <div class="input-group">
                                <input type="password" class="form-control" value="••••••••••••••••" disabled />
                                <button class="btn btn-outline-secondary" type="button" disabled>
                                    ??? Reveal
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <button class="btn btn-primary" disabled>
                            Update Credentials
                        </button>
                        <button class="btn btn-outline-secondary ms-2" disabled>
                            Test Connection
                        </button>
                    </div>
                </div>
            </div>

            <!-- API Integration Notice -->
            <div class="alert alert-warning mt-4">
                <strong>For Developers:</strong>
                This feature requires AdminAPI endpoints:
                <ul class="mb-0">
                    <li><code>GET /api/admin/oauth/limoanywhere</code> - Get current credentials</li>
                    <li><code>PUT /api/admin/oauth/limoanywhere</code> - Update credentials</li>
                </ul>
                These endpoints are planned but not yet implemented.
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        @{
            Navigation.NavigateTo("/login");
        }
    </NotAuthorized>
</AuthorizeView>

