@page "/admin/users"
@rendermode InteractiveServer
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "admin")]
@using Microsoft.AspNetCore.Components.Authorization
@using Bellwood.AdminPortal.Models
@using Bellwood.AdminPortal.Services
@using Bellwood.AdminPortal.Components.Shared
@inject IUserManagementService UserService
@inject NavigationManager Navigation

<PageTitle>User Management - Bellwood Elite</PageTitle>

<ToastNotification @ref="toast" />

<AuthorizeView Roles="admin">
    <Authorized>
        <div class="container-fluid py-4">
            <div class="row mb-4">
                <div class="col-md-8">
                    <h2 class="text-bellwood-gold">üë• User Management</h2>
                    <p class="text-muted">Create users and manage role assignments</p>
                </div>
                <div class="col-md-4 d-flex justify-content-md-end align-items-start">
                    <button class="btn btn-primary" @onclick="ShowCreateModal">
                        ‚ûï Create User
                    </button>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success alert-dismissible fade show">
                    ‚úÖ @successMessage
                    <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
                </div>
            }

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    ‚ö†Ô∏è @errorMessage
                    <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                </div>
            }

            <!-- Users Table -->
            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-bellwood-gold" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-3 text-muted">Loading users...</p>
                </div>
            }
            else if (!users.Any())
            {
                <div class="alert alert-info">
                    No users found with the selected filters.
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            Users (@users.Count)
                        </h5>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th class="text-white">Username</th>
                                        <th class="text-white">Email</th>
                                        <th class="text-white">Roles</th>
                                        <th class="text-white">Created At</th>
                                        <th class="text-white">Modified At</th>
                                        <th class="text-white">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in users)
                                    {
                                        <tr>
                                            <td>
                                                <strong class="text-white">
                                                    @if (!string.IsNullOrEmpty(user.Username))
                                                    {
                                                        @user.Username
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted fst-italic">No username</span>
                                                    }
                                                </strong>
                                            </td>
                                            <td class="text-light">
                                                @if (!string.IsNullOrEmpty(user.Email))
                                                {
                                                    @user.Email
                                                }
                                                else
                                                {
                                                    <span class="text-muted fst-italic">No email</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="text-white">@FormatRoles(user)</span>
                                            </td>
                                            <td>
                                                <small class="text-light">@user.CreatedAt.ToLocalTime().ToString("g")</small>
                                            </td>
                                            <td>
                                                <small class="text-light">@(user.ModifiedAt.HasValue ? user.ModifiedAt.Value.ToLocalTime().ToString("g") : "‚Äî")</small>
                                            </td>
                                            <td class="d-flex flex-wrap gap-2">
                                                <button class="btn btn-sm btn-outline-primary"
                                                        @onclick="() => ShowRoleChangeModal(user)">
                                                    Edit Roles
                                                </button>
                                                @if (disableEndpointAvailable)
                                                {
                                                    <button class="btn btn-sm @(user.IsDisabled ? "btn-outline-success" : "btn-outline-danger")"
                                                            @onclick="() => ToggleUserDisabled(user)"
                                                            disabled="@(statusUpdatingUserId == user.Id)">
                                                        @if (statusUpdatingUserId == user.Id)
                                                        {
                                                            <span class="spinner-border spinner-border-sm"></span>
                                                        }
                                                        else
                                                        {
                                                            <span>@(user.IsDisabled ? "Enable" : "Disable")</span>
                                                        }
                                                    </button>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary" 
                                                          title="User disable feature coming in next release"
                                                          style="cursor: help; padding: 0.375rem 0.75rem;">
                                                        üöß Disable: Not Yet Available
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            <!-- Create User Modal -->
            @if (showCreateModal)
            {
                <div class="modal d-block" tabindex="-1" style="background: rgba(0,0,0,0.5);">
                    <div class="modal-dialog modal-dialog-centered modal-lg">
                        <div class="modal-content" style="background: var(--bellwood-charcoal); border: 1px solid var(--bellwood-gold);">
                            <div class="modal-header">
                                <h5 class="modal-title text-white">Create User</h5>
                                <button type="button" class="btn-close btn-close-white" @onclick="CloseCreateModal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label class="form-label text-white">Email</label>
                                    <input type="email" class="form-control" @bind="newUserEmail" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-white">Roles</label>
                                    <div class="d-flex flex-wrap gap-3">
                                        @foreach (var role in availableRoles)
                                        {
                                            <div class="form-check">
                                                <input class="form-check-input"
                                                       type="checkbox"
                                                       checked="@selectedCreateRoles.Contains(role)"
                                                       @onchange="(args) => ToggleCreateRole(role, args.Value)" />
                                                <label class="form-check-label text-light">@role</label>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-white">Temporary Password</label>
                                    <input type="password" class="form-control" @bind="temporaryPassword" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label text-white">Confirm Password</label>
                                    <input type="password" class="form-control" @bind="confirmPassword" />
                                    <small class="text-muted">Minimum 10 characters.</small>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" @onclick="CloseCreateModal">Cancel</button>
                                <button type="button" class="btn btn-primary" @onclick="CreateUserAsync" disabled="@isCreating">
                                    @if (isCreating)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                    }
                                    Create User
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Role Change Modal -->
            @if (showRolesModal && selectedUser != null)
            {
                <div class="modal d-block" tabindex="-1" style="background: rgba(0,0,0,0.5);">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content" style="background: var(--bellwood-charcoal); border: 1px solid var(--bellwood-gold);">
                            <div class="modal-header">
                                <h5 class="modal-title text-white">Edit User Roles</h5>
                                <button type="button" class="btn-close btn-close-white" @onclick="CancelRoleChange"></button>
                            </div>
                            <div class="modal-body">
                                <p class="text-light">
                                    <strong class="text-white">User:</strong> <span class="text-bellwood-gold">@selectedUser.Username</span>
                                    @if (!string.IsNullOrEmpty(selectedUser.Email))
                                    {
                                        <br />
                                        <strong class="text-white">Email:</strong> <span class="text-light">@selectedUser.Email</span>
                                    }
                                    <br />
                                    <strong class="text-white">Current Roles:</strong> <span class="text-light">@FormatRoles(selectedUser)</span>
                                </p>
                                <div class="mb-3">
                                    <label class="form-label text-white">Roles</label>
                                    <div class="d-flex flex-wrap gap-3">
                                        @foreach (var role in availableRoles)
                                        {
                                            <div class="form-check">
                                                <input class="form-check-input"
                                                       type="checkbox"
                                                       checked="@selectedRoles.Contains(role)"
                                                       @onchange="(args) => ToggleEditRole(role, args.Value)" />
                                                <label class="form-check-label text-light">@role</label>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="alert alert-warning">
                                    <strong>‚ÑπÔ∏è Note:</strong>
                                    <ul class="mb-0">
                                        <li>Role changes take effect on the user's next login.</li>
                                        <li>At least one role must remain assigned.</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" @onclick="CancelRoleChange">
                                    Cancel
                                </button>
                                <button type="button" class="btn btn-primary"
                                        @onclick="ConfirmRoleChange"
                                        disabled="@isUpdatingRoles">
                                    @if (isUpdatingRoles)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                    }
                                    Save Roles
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </Authorized>
    <NotAuthorized>
        @{
            Navigation.NavigateTo("/login");
        }
    </NotAuthorized>
</AuthorizeView>

@code {
    private List<UserDto> users = new();
    private UserDto? selectedUser;
    
    private bool isLoading = false;
    private bool isUpdatingRoles = false;
    private bool isCreating = false;
    private string? statusUpdatingUserId;
    private string? successMessage;
    private string? errorMessage;
    private bool showCreateModal = false;
    private bool showRolesModal = false;
    private bool disableEndpointAvailable = false; // Start as unavailable for alpha testing

    private readonly List<string> availableRoles = new() { "Passenger", "Driver", "Dispatcher", "Admin" };
    private HashSet<string> selectedRoles = new(StringComparer.OrdinalIgnoreCase);
    private HashSet<string> selectedCreateRoles = new(StringComparer.OrdinalIgnoreCase);

    private string newUserEmail = string.Empty;
    private string temporaryPassword = string.Empty;
    private string confirmPassword = string.Empty;

    private ToastNotification? toast;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsersAsync();
    }

    private async Task LoadUsersAsync()
    {
        isLoading = true;
        errorMessage = null;
        
        try
        {
            users = await UserService.GetUsersAsync();
        }
        catch (UnauthorizedAccessException ex)
        {
            errorMessage = ex.Message;
            toast?.ShowError(ex.Message);
            Console.WriteLine($"[UserManagement] Access denied: {ex.Message}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load users: {ex.Message}";
            toast?.ShowError(errorMessage);
            Console.WriteLine($"[UserManagement] Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowRoleChangeModal(UserDto user)
    {
        selectedUser = user;
        selectedRoles = new HashSet<string>(
            (user.Roles ?? new List<string>()).Select(NormalizeRoleSelection),
            StringComparer.OrdinalIgnoreCase);
        successMessage = null;
        errorMessage = null;
        showRolesModal = true;
    }

    private void CancelRoleChange()
    {
        selectedUser = null;
        selectedRoles.Clear();
        showRolesModal = false;
    }

    private async Task ConfirmRoleChange()
    {
        if (selectedUser == null) return;
        if (!selectedRoles.Any())
        {
            errorMessage = "Select at least one role before saving.";
            toast?.ShowError(errorMessage);
            return;
        }

        isUpdatingRoles = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var result = await UserService.UpdateUserRolesAsync(selectedUser.Id, selectedRoles.ToList());

            if (result.Success)
            {
                var userIdentifier = !string.IsNullOrEmpty(selectedUser.Username) 
                    ? selectedUser.Username 
                    : selectedUser.Email;
                successMessage = $"Roles updated for {userIdentifier}.";
                toast?.ShowSuccess(successMessage);

                await LoadUsersAsync();
                CancelRoleChange();
            }
            else
            {
                errorMessage = result.Message ?? "Failed to update role";
                toast?.ShowError(errorMessage);
            }
        }
        catch (UnauthorizedAccessException ex)
        {
            errorMessage = ex.Message;
            toast?.ShowError(ex.Message);
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to update role: {ex.Message}";
            toast?.ShowError(errorMessage);
        }
        finally
        {
            isUpdatingRoles = false;
        }
    }

    private void ShowCreateModal()
    {
        showCreateModal = true;
        successMessage = null;
        errorMessage = null;
    }

    private void CloseCreateModal()
    {
        showCreateModal = false;
        ClearCreateForm();
    }

    private async Task CreateUserAsync()
    {
        var validationError = ValidateCreateForm();
        if (!string.IsNullOrEmpty(validationError))
        {
            errorMessage = validationError;
            toast?.ShowError(validationError);
            return;
        }

        isCreating = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var request = new CreateUserRequest
            {
                Email = newUserEmail.Trim(),
                Roles = selectedCreateRoles.ToList(),
                TemporaryPassword = temporaryPassword
            };

            var result = await UserService.CreateUserAsync(request);

            if (result.Success)
            {
                successMessage = $"User {request.Email} created successfully.";
                toast?.ShowSuccess(successMessage);
                CloseCreateModal();
                await LoadUsersAsync();
            }
            else
            {
                errorMessage = result.Message ?? "Failed to create user.";
                toast?.ShowError(errorMessage);
            }
        }
        catch (UnauthorizedAccessException ex)
        {
            errorMessage = ex.Message;
            toast?.ShowError(ex.Message);
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to create user: {ex.Message}";
            toast?.ShowError(errorMessage);
        }
        finally
        {
            temporaryPassword = string.Empty;
            confirmPassword = string.Empty;
            isCreating = false;
        }
    }

    private async Task ToggleUserDisabled(UserDto user)
    {
        if (statusUpdatingUserId != null)
        {
            return;
        }

        statusUpdatingUserId = user.Id;
        errorMessage = null;
        successMessage = null;

        try
        {
            var result = await UserService.SetUserDisabledAsync(user.Id, !user.IsDisabled);
            if (result.EndpointNotFound)
            {
                disableEndpointAvailable = false;
                errorMessage = result.Message ?? "Disable endpoint not available.";
                toast?.ShowError(errorMessage);
                return;
            }

            if (result.Success)
            {
                user.IsDisabled = !user.IsDisabled;
                var userIdentifier = !string.IsNullOrEmpty(user.Username)
                    ? user.Username
                    : user.Email;
                successMessage = $"{userIdentifier} {(user.IsDisabled ? "disabled" : "enabled")}.";

                toast?.ShowSuccess(successMessage);
            }
            else
            {
                errorMessage = result.Message ?? "Failed to update user status.";
                toast?.ShowError(errorMessage);
            }
        }
        catch (UnauthorizedAccessException ex)
        {
            errorMessage = ex.Message;
            toast?.ShowError(ex.Message);
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to update user status: {ex.Message}";
            toast?.ShowError(errorMessage);
        }
        finally
        {
            statusUpdatingUserId = null;
        }
    }

    private void ToggleCreateRole(string role, object? value)
    {
        ToggleRoleSelection(selectedCreateRoles, role, value);
    }

    private void ToggleEditRole(string role, object? value)
    {
        ToggleRoleSelection(selectedRoles, role, value);
    }

    private static void ToggleRoleSelection(HashSet<string> selection, string role, object? value)
    {
        if (value is not bool isChecked)
        {
            return;
        }

        if (isChecked)
        {
            selection.Add(role);
        }
        else
        {
            selection.Remove(role);
        }
    }

    private string? ValidateCreateForm()
    {
        if (string.IsNullOrWhiteSpace(newUserEmail))
        {
            return "Email is required.";
        }

        if (!selectedCreateRoles.Any())
        {
            return "Select at least one role.";
        }

        if (string.IsNullOrWhiteSpace(temporaryPassword) || temporaryPassword.Length < 10)
        {
            return "Temporary password must be at least 10 characters.";
        }

        if (!string.Equals(temporaryPassword, confirmPassword, StringComparison.Ordinal))
        {
            return "Temporary password and confirmation do not match.";
        }

        return null;
    }

    private void ClearCreateForm()
    {
        newUserEmail = string.Empty;
        temporaryPassword = string.Empty;
        confirmPassword = string.Empty;
        selectedCreateRoles.Clear();
    }

    private string NormalizeRoleSelection(string role)
    {
        var normalized = availableRoles.FirstOrDefault(r => r.Equals(role, StringComparison.OrdinalIgnoreCase));
        return normalized ?? role;
    }

    private static string GetRoleLabel(string role)
    {
        return role.ToLowerInvariant() switch
        {
            "admin" => "Admin",
            "dispatcher" => "Dispatcher",
            "driver" => "Driver",
            "passenger" => "Passenger",
            _ => role
        };
    }

    private static string FormatRoles(UserDto user)
    {
        if (user.Roles == null || user.Roles.Count == 0)
        {
            return "None";
        }

        return string.Join(", ", user.Roles.Select(GetRoleLabel));
    }
}
