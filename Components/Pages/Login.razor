@page "/login"
@rendermode InteractiveServer
@layout Layout.EmptyLayout
@using System.Net.Http.Json
@using System.Security.Claims
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies
@using Bellwood.AdminPortal.Services
@inject IHttpClientFactory HttpFactory
@inject NavigationManager Navigation
@inject JwtAuthenticationStateProvider AuthStateProvider
@inject IAuthTokenProvider TokenProvider

<PageTitle>Bellwood Elite - Staff Login</PageTitle>

<div class="container">
    <div class="row justify-content-center" style="margin-top: 100px;">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="/images/bellwood_elite_icon.png" 
                             alt="Bellwood Elite" 
                             style="width: 80px; height: 80px; object-fit: contain;"
                             onerror="this.style.display='none'; this.nextElementSibling.style.display='block';" />
                        <span class="display-4" style="display: none;">🚕</span>
                    </div>
                    <h3 class="text-center mb-2" style="color: var(--bellwood-gold);">
                        Bellwood Elite
                    </h3>
                    <h5 class="text-center mb-4">Staff Portal Login</h5>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">@errorMessage</div>
                    }

                    <EditForm Model="@loginModel" OnValidSubmit="HandleLogin" data-enhance="false">
                        <div class="mb-3">
                            <label class="form-label">Username</label>
                            <InputText @bind-Value="loginModel.Username"
                                       class="form-control"
                                       placeholder="Username" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <InputText @bind-Value="loginModel.Password"
                                       type="password"
                                       class="form-control"
                                       placeholder="Password" />
                        </div>
                        <button type="submit" class="btn btn-primary w-100" disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            Login
                        </button>
                    </EditForm>

                    <div class="text-center mt-3">
                        <small class="text-muted">
                            Dev: alice/password (admin), diana/password (dispatcher)
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginModel loginModel = new();
    private string? errorMessage;
    private bool isLoading;

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            Console.WriteLine($"[Login] Starting login for user: {loginModel.Username}");
            var client = HttpFactory.CreateClient("AuthServer");

            // Call AuthServer's login endpoint
            var response = await client.PostAsJsonAsync("/api/auth/login", new
            {
                username = loginModel.Username,
                password = loginModel.Password
            });

            Console.WriteLine($"[Login] Auth server response: {response.StatusCode}");

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<LoginResponse>();

                if (result?.AccessToken != null)
                {
                    Console.WriteLine($"[Login] Token received, length: {result.AccessToken.Length}");
                    
                    // Store refresh token if provided (Phase 2.2)
                    if (!string.IsNullOrEmpty(result.RefreshToken))
                    {
                        await StoreRefreshTokenAsync(result.RefreshToken);
                        Console.WriteLine("[Login] Refresh token stored");
                    }
                    
                    // Set the authentication state for Blazor
                    await AuthStateProvider.MarkUserAsAuthenticatedAsync(
                        loginModel.Username ?? "", 
                        result.AccessToken);

                    Console.WriteLine("[Login] Auth state updated, navigating to /main");

                    // Redirect to main page
                    Navigation.NavigateTo("/main", forceLoad: false);
                }
                else
                {
                    errorMessage = "Invalid response from auth server.";
                    Console.WriteLine("[Login] No access token in response");
                }
            }
            else
            {
                errorMessage = "Invalid username or password.";
                Console.WriteLine($"[Login] Login failed with status: {response.StatusCode}");
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Login failed: {ex.Message}";
            Console.WriteLine($"[Login] Exception: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task StoreRefreshTokenAsync(string refreshToken)
    {
        // Store refresh token in session storage via JSInterop
        // For now, just store in memory via TokenProvider
        // TODO: Implement actual session storage persistence
        await TokenProvider.SetRefreshTokenAsync(refreshToken);
    }

    private class LoginModel
    {
        public string? Username { get; set; }
        public string? Password { get; set; }
    }

    private class LoginResponse
    {
        public string? AccessToken { get; set; }
        public string? RefreshToken { get; set; }
        public int ExpiresIn { get; set; }  // Access token lifetime in seconds
    }
}