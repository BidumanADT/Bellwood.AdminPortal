<!-- Phase 3: Reusable loading spinner component -->
@if (IsLoading)
{
    <div class="@(FullPage ? "position-fixed top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center" : "text-center py-5")" 
         style="@(FullPage ? "background: rgba(0,0,0,0.5); z-index: 9998;" : "")">
        <div>
            <div class="spinner-border @SpinnerClass" role="status" style="@(Size == "large" ? "width: 3rem; height: 3rem;" : "")">
                <span class="visually-hidden">Loading...</span>
            </div>
            @if (!string.IsNullOrEmpty(Message))
            {
                <p class="mt-3 @TextClass">@Message</p>
            }
        </div>
    </div>
}

@code {
    [Parameter] public bool IsLoading { get; set; }
    [Parameter] public string? Message { get; set; }
    [Parameter] public bool FullPage { get; set; } = false;
    [Parameter] public string Size { get; set; } = "normal"; // normal, large, small
    [Parameter] public string SpinnerClass { get; set; } = "text-primary";
    [Parameter] public string TextClass { get; set; } = "text-muted";
}
